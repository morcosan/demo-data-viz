{
  "compilerOptions": {
    /* Build Metadata */
    "incremental": true,
    "noEmit": true,

    /* Language & Environment */
    "target": "ES2022",
    "jsx": "react-jsx",
    // Setting jsxImportSource breaks autocomplete for Webstorm, use triple-slash directives instead

    /* Modules & Resolution */
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true
  }
}
